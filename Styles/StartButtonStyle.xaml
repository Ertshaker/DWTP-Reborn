<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StartButtonStyle" BasedOn="{StaticResource RegularButtonStyle}" TargetType="Button">
        <Style.Setters>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop x:Name="GradientStop1" Color="#27db58" Offset="0"/>
                        <GradientStop x:Name="GradientStop2" Color="#00ff00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>