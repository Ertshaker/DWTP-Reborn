<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NightDayButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource MainMenuButtonStyle}">
        <Style.Setters>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop x:Name="GradientStop1" Color="#f5df4d" Offset="0.0"/>
                        <GradientStop x:Name="GradientStop2" Color="#252850" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>