<Application x:Class="DWTP_Reborn.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:DWTP_Reborn.ViewModels"
             xmlns:view="clr-namespace:DWTP_Reborn.Views"
             xmlns:local="clr-namespace:DWTP_Reborn"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/MainMenuButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/ExitButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/CollapseButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:WallpaperChangerViewModel}">
                <view:WallpaperChangerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:FileSorterViewModel}">
                <view:FileSorterView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
